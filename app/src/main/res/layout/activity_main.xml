<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="software.level.backgroundtasks.MainActivity">

    <Button
        android:text="@string/asynctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_async_task"
        android:onClick="switchActivity"/>

    <Button
        android:text="@string/asynctaskloader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_async_task_loader"
        android:onClick="switchActivity"/>

    <Button
        android:text="@string/observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_observable"
        android:onClick="switchActivity"/>

</LinearLayout>
